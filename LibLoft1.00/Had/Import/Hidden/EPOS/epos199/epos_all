#!/bin/csh

rm -fr comp_tmp
rm -f epos_all.f

set files=*.f
foreach a  ($files)

echo $a '>> epos_all.f'

cat $a >> epos_all.f

end

mkdir comp_tmp
cp *.inc* comp_tmp/
cp epos_all.f comp_tmp/

cd comp_tmp

ftnchekl -notruncation -pretty=no-continuation  -no-pure epos_all.f | less
#g77 -pg -Wall -fno-automatic -finit-local-zeros -fbounds-check -g epos_all.f
cd ..

